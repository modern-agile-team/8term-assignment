<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="/js/home/index.js" defer></script>
    <script src="/js/home/index.ctrl.js" defer></script>
    <title>Document</title>
  </head>
  <body>
    <table align="center">
      <tr>
        <td><h2>to do list</h2></td>
      </tr>
      <tr>
        <td><input type="text" id="text" /></td>
        <td>
          <button id="add">+</button>
        </td>
      </tr>
      <tr>
        <td><hr /></td>
      </tr>
    </table>

    <!--나중에 수정하기 -->
    <table id="list" align="center">
      <%for(let i = 0; i< data.length; i++){ %>
      <tr>
        <td align="center">
          <center>
            <input type="checkbox" /><%=data[i].description%>
            <button id="<%`edit${i}`%>">수정</button> <button>삭제</button>
            <hr width="200px" />
          </center>
        </td>
      </tr>
      <% }%>
    </table>
  </body>
</html>
